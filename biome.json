{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/node_modules",
			"!**/.next",
			"!**/out",
			"!**/build",
			"!**/dist",
			"!**/*.config.js",
			"!**/*.config.ts",
			"!**/*.config.mjs",
			"!**/components/ui"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn",
				"noArrayIndexKey": "warn"
			},
			"complexity": {
				"noUselessFragments": "warn",
				"noForEach": "off"
			},
			"style": {
				"noNonNullAssertion": "warn",
				"useNodejsImportProtocol": "off",
				"noUnusedTemplateLiteral": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn",
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			},
			"a11y": {
				"useKeyWithClickEvents": "warn",
				"useButtonType": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded",
			"trailingCommas": "es5"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	}
}
